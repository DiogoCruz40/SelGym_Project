    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_calendar">

    <fragment
        android:id="@+id/navigation_calendar"
        android:name="pt.selfgym.ui.calendar.CalendarFragment"
        android:label="@string/title_calendar"
        tools:layout="@layout/fragment_calendar" />
    <fragment
        android:id="@+id/navigation_workouts"
        android:name="pt.selfgym.ui.workouts.WorkoutFragment"
        android:label="@string/title_workouts"
        tools:layout="@layout/fragment_workouts" />
    <fragment
        android:id="@+id/navigation_statistics"
        android:name="pt.selfgym.ui.statistics.StatisticsFragment"
        android:label="@string/title_statistics"
        tools:layout="@layout/fragment_statistics" />
    <fragment
        android:id="@+id/editWorkoutFragment"
        android:name="pt.selfgym.ui.workouts.EditWorkoutFragment"
        android:label="Workout"/>
    <fragment
        android:id="@+id/addExerciseFragment"
        android:name="pt.selfgym.ui.workouts.AddExerciseFragment"
        android:label="Exercise"/>
